<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    tools:context="com.example.zizacalc.MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/background">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:id="@+id/scroller"
            android:fillViewport="true">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/LabelStyle"

                android:layout_gravity="right"/>
        </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button1"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button2"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button3"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button4"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button5"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button6"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button7"
            style="@style/ButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button7"
            android:onClick="onNumberButtonClick"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button8"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button9"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button0"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button_dot"
            android:onClick="onNumberButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="@string/button_cancel"
            android:onClick="onOperationButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/button_plus"
            android:onClick="onOperationButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/button_minus"
        android:onClick="onOperationButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_mult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/button_mult"
            android:onClick="onOperationButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/button_div"
            android:onClick="onOperationButtonClick"
            style="@style/ButtonTheme"
            android:layout_margin="5dp"
            android:textSize="32sp" />

    </LinearLayout>
    <Button
        android:id="@+id/button_equals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_equals"
        android:onClick="onOperationButtonClick"
        style="@style/ButtonTheme"
        android:layout_margin="5dp"
        android:textSize="32sp" />

</LinearLayout>